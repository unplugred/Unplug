		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}

server {
	listen 80;
	server_name rss.*;
	
	location ~ /favicon.ico {
		try_files /unplug/static/assets/favicon.ico =404;
	}
	location / {
		try_files /misc/feed.xml =404;
	}
}

