			.vid {
				position: absolute;
				width: 130vmin;
				height: 130vmin;
				z-index: -10000;
				object-fit: cover;
				top: calc(50vh - 65vmin);
				left: calc(50vw - 65vmin);
			}

			.gradient {
				background: linear-gradient(90deg, black 0%, transparent 15%, rgba(0,0,0,0) 85%, black 100%);
			}

