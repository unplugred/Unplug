*, .normalmouse{
	cursor: url("<%= unplugassets %>/cursors/default.png") 0 0, default;
}
a, .hovermouse, a *{
	cursor: url("<%= unplugassets %>/cursors/pointer.png") 6 0, pointer !important;
}
.waitmouse {
	cursor: url("<%= unplugassets %>/cursors/wait.png") 6 0, wait;
}
::selection{
	color: #333;
	background: #999999fe;
}
::-webkit-scrollbar{
	width: 9px;
	height: 9px;
}
::-webkit-scrollbar-track{
	background-color: transparent;
}
::-webkit-scrollbar-thumb{
	background-color: #999;
	border: 1px black solid;
	border-radius: 6px;
	outline: none;
}
::-webkit-scrollbar-corner{
	background-color: transparent;
}
body {
	margin: 0;
	padding: 0;
	background-color: black;
	font-family: 'Darker Grotesque', sans-serif;
	color: white;
	font-size: 20px;
	overflow-x: hidden;
	display: flex;
	flex-direction: column;
	min-height: 100vh;
	width: 100vw;
}
#homepage {
	background: url("<%= assets %>/about/note.gif");
	display: block;
	position: fixed;
	width: 100px;
	height: 100px;
	top: 20px;
	left: 6px;
	z-index: 1000;
}
.section {
	min-height: 80vh;
	background-blend-mode: difference;
	padding: 10px;
	animation: bgt 60s linear 0s infinite normal;
	position: relative;
	z-index: 20;
	image-rendering: pixelated;
	image-rendering: crisp-edges;
	display: flex;
	will-change: auto;
}
.single .section {
	flex-grow: 1;
}
@keyframes bgt {
	from { background-position: 10px calc(100% - 10px), 0 0; }
	to { background-position: 10px calc(100% - 10px), 1024px 1024px; }
}
@keyframes bgc {
	from { background-position: center calc(100% - 60px), 0 0; }
	to { background-position: center calc(100% - 60px), 1024px 1024px; }
}
.tint {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	mix-blend-mode: multiply;
	z-index: -10;
}
.desc {
	position: relative;
	display: inline-block;
	padding: 14px 85px 20px 20px;
	margin-bottom: calc(15vmin + 100px);
	margin-top: 100px;
	width: 600px;
	max-width: calc(100vw - 550px);
	min-width: 400px;
	line-height: .85;
}
.invert {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	mix-blend-mode: difference;
	z-index: -12;
	background-color: white;
}
.title {
	font-size: 2.7em;
	font-weight: bold;
	font-variant: petite-caps;
	line-height: .5;
	padding-bottom: 10px;
	text-decoration: none;
	display: block;
}
.title:hover {
	opacity: .7;
}
.single .title {
	pointer-events: none;
}
.subtitle {
	font-size: 1.3em;
	opacity: .7;
	font-style: italic;
	font-family: serif;
}
.description {
	font-size: 1.4em;
	margin-top: 10px;
	z-index: 100;
	position: relative;
}
.demo {
	opacity: .5;
	font-size: .67em;
	font-style: italic;
}
.download {
	width: 202px;
	height: 36px;
	background: url("<%= assets %>/download.png");
	display: block;
	margin: 20px auto 0 auto;
	max-width: 100%;
	z-index: 100;
	position: relative;
}
.download:hover {
	background-position-y: 100%;
}
.decoration {
	position: absolute;
}
.rainbow {
	height: 6px;
	background: url("<%= assets %>/rainbow.png");
	border: 1px solid black;
	border-width: 1px 0;
}
.center {
	margin: auto;
}
a {
	color: inherit;
}

#popups {
	position: fixed;
	left: 20px;
	bottom: 23px;
	z-index: 1000;
	pointer-events: none;
}
.popupwrap {
	width: 0;
	overflow: hidden;
	margin-right: 10px;
	margin-top: 10px;
	box-shadow: black 5px 5px 0;
	display: inline-block;
	pointer-events: all;
	max-width: calc(100vw - 40px);
}
.popupon {
	animation: popup .5s ease-out 0s normal forwards;
}
.popupoff {
	animation: popup .5s ease-out 0s reverse forwards;
}
.popup {
	width: 400px;
	max-width: calc(100vw - 40px);
	background-color: white;
	color: black;
	float: right;
	position: relative;
}
@keyframes popup {
	from { width: 0px; }
	to { width: 400px; }
}
.popupclosewrap {
	position: absolute;
	width: 13px;
	height: 13px;
	right: 6px;
	top: 6px;
	padding: 4px;
}
.popupclose {
	background: black;
	height: 3px;
	width: 13px;
	margin: 5px 0;
	transform: rotate(45deg);
	transition: transform .2s;
}
.popupclose::after {
	content: '';
	height: 13px;
	width: 3px;
	background: black;
	display: block;
	position: relative;
	top: -5px;
	left: 5px;
}
.popupclosewrap:hover .popupclose {
	transform: none;
}
#popupaudiodesc {
	padding-bottom: 35px;
}
.popupdesc {
	padding-bottom: 5px;
	padding-left: 5px;
}
#popupplayer {
	width: 100%;
	height: 30px;
	position: absolute;
	bottom: 0;
}

@media only screen and (max-width: 1000px) {
	.section {
		background-size: 90%,auto!important;
	}
}
@media only screen and (max-width: 650px) {
	.desc {
		min-width: 0;
		width: calc(100vw - 140px);
		max-width: 400px;
		margin-bottom: 19vw;
	}
	.section {
		min-height: 0;
	}
}
@media only screen and (max-width: 400px) {
	body {
		font-size: 5vw;
	}
	.decoration {
		display: none;
	}
	.desc {
		padding-right: 20px;
		width: calc(100vw - 70px);
	}
}
@media only screen and (max-width: 270px) {
	.win-pos {
		display: none;
	}
}
