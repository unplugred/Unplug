<%- include('../partials/header',{title:"horrors"}) %>
		<style>
			#bg {
				background: url("<%= assets %>/180422/bg.png") center fixed;
				z-index: -100;
				opacity: .6;
			}

			#bgoff {
				background: url("<%= assets %>/180422/bgoff.png") center fixed;
				z-index: -200;
				width: 100vw;
			}

			#bg, #bgoff {
				top: 0;
				left: 0;
				height: 100vh;
				position: fixed;
				background-size: cover;
			}

			body {
				display: flex;
			}

			#text {
				width: 497px;
				height: 80px;
				margin: auto;
				background: url("<%= assets %>/180422/text.png");
			}

			#scanlines {
				position: absolute;
				width: 100vw;
				height: 100vh;
				top: 0;
				left: 0;
				background-image: url("<%= assets %>/scanlines.png");
				opacity: 0.4;
				pointer-events: none;
			}
		</style>
	</head>
	<body>
		<div id="bgoff"></div>
		<div id="bg"></div>
		<a href="/waterweek" title="water week" id="text"></a>
		<div id="scanlines"></div>
		<script>
			var starting = new Date(2019, 7, 18, 7, 30, 0, 0);
			var ending = new Date(2022, 3, 18, 15, 0, 0, 0);
			var bg = document.getElementById("bg");

			setInterval(update, 5000);
			function update()
			{
				bg.style.width = ((((Date.now() - starting.getTime())/(ending.getTime() - starting.getTime()) + 18) % 1) * 100) + "vw";
			}
			update();
		</script>
