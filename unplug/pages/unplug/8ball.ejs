<%- include('../partials/header',{title:"8ball"}) %>
		<style>
			body {
				display: flex;
			}
			#bigwrap {
				display: flex;
				justify-content: space-around;
				align-items: center;
				margin: auto;
				width: 100vw;
				height: 100vh;
				max-width: 1200px;
				max-height: 1300px;
			}
			#win-selection {
				width: 404px;
				max-height: 685px;
				height: 80%;
				margin: 10px 0;
				position: relative;
				background: url("<%= assets %>/8ball/bg.gif") no-repeat top center;
				border: 4px double #2A2A2A;
				image-rendering: pixelated;
			}
			#ball {
				width: 500px;
				height: 500px;
				max-width: 90vmin;
				max-height: 90vmin;
				background-image: url("<%= assets %>/8ball/base.png");
				background-size: contain;
				background-repeat: no-repeat;
				background-position: center center;
			}
			#balltext {
				width: 53.4%;
				height: 51%;
				top: 12.4%;
				left: 23.4%;
				position: relative;
				background-size: cover;
			}
			#screen1 {
				background-position: center center;
				background-repeat: no-repeat;
			}
			#screen2 {
				overflow-y: auto;
			}
			.screen {
				width: 100%;
				height: 100%;
			}
			#scroll {
				background-image: url("<%= assets %>/8ball/options.png?v=2");
				background-position: top left;
				background-repeat: no-repeat;
				width: 100%;
				height: 536px;
				padding-top: 124px;
			}
			.button:hover, .button:focus {
				opacity: 1!important;
			}
			.button {
				width: 356px;
				height: 74px;
				background-image: url("<%= assets %>/8ball/optionsselect.png?v=2");
				opacity: 0;
				margin: 0 auto 13px auto;
				display: block;
			}
			#screen1 .button {
				top: calc(50% + 36px);
				position: relative;
			}

			::-webkit-scrollbar-thumb {
				border: 3px black solid;
				background-color: #E2DBD3;
			}
			@media only all and (max-width: 940px) {
				#bigwrap {
					flex-direction: column;
				}
				#win-selection {
					height: calc(63vh - 150px);
				}
				#ball {
					flex: none;
					max-width: 50vh;
					max-height: 50vh;
					margin-top: 5px;
				}
			}
		</style>
		<link rel="prefetch" href="<%= assets %>/8ball/0.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/1.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/2.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/3.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/4.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/5.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/6.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/7.png" />
		<link rel="prefetch" href="<%= assets %>/8ball/8.png" />
	</head>
	<body>
		<div id="bigwrap">
			<div id="win-selection">
				<div id="screen1" class="screen" style="background-image: url('<%= assets %>/8ball/start.png?v=2')">
					<a href="javascript:void(0)" class="button" id="start" onclick="dechoose()"></a>
				</div>
				<div id="screen2" class="screen" style="display: none">
					<div id="scroll">
						<a href="javascript:void(0)" class="button" id="o1" onclick="choose(1)"></a>
						<a href="javascript:void(0)" class="button" id="o2" onclick="choose(2)"></a>
						<a href="javascript:void(0)" class="button" id="o3" onclick="choose(3)"></a>
						<a href="javascript:void(0)" class="button" id="o4" onclick="choose(4)"></a>
						<a href="javascript:void(0)" class="button" id="o5" onclick="choose(5)"></a>
						<a href="javascript:void(0)" class="button" id="o6" onclick="choose(6)"></a>
					</div>
				</div>
			</div>
			<div id="ball">
				<div id="balltext" style="background-image: url('<%= assets %>/8ball/0.png');"></div>
			</div>
		</div>
		<script>
			var screen1 = document.getElementById("screen1");
			var screen2 = document.getElementById("screen2");
			var ball = document.getElementById("balltext");
			var screen = 666;
			var interval;
			var deinterval;
			var op;

			function choose(option) {
				screen2.style.pointerEvents = "none";
				
				if(screen > 4) {
					setTimeout(function(option){ choose(option); }, 200);
					return;
				}
				if (screen <= 3) {
					screen = 0;
				}

				interval = setInterval(animate, 200);
				clearInterval(deinterval);
			}

			function dechoose() {
				screen1.style.pointerEvents = "none";
				screen1.style.display = "none";
				screen2.style.display = null;

				if(screen === 666) {
					screen = 1;
				} else {
					deinterval = setInterval(deanimate,200);
					clearInterval(interval);
				}
			}

			function animate() {
				if(screen === 4) {
					setOp(0);
					setBg(Math.floor(Math.random()*5 + 4));
				} else if(screen > 4) {
					setOp((screen - 4)/3);
					if(screen === 7) {
						screen1.style.display = null;
						screen2.style.display = "none";
						screen1.style.pointerEvents = null;
						screen2.style.pointerEvents = null;
						screen1.style.backgroundImage = "url('<%= assets %>/8ball/end.png?v=2')";
						clearInterval(interval);
						screen = 5;
					}
				}
				else {
					setBg(screen);
					setOp(op+(1/3));
				}

				screen++;
			}

			function deanimate() {
				if(screen >= 5) setOp((screen - 5)/2);
				else {
					if(screen === 4) setBg(Math.abs(0));
					setOp(1 - (screen - 1)/3);
					if(screen === 1) {
						clearInterval(interval);
						screen = 2;
					}
				}

				screen--;
			}

			function setOp(num) {
				ball.style.opacity = num;
				op = num;
			}
			function setBg(num) {
				ball.style.backgroundImage = "url('<%= assets %>/8ball/" + num + ".png')";
			}
		</script>
