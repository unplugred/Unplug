<%- include('../header',{title:"gallery"}) %>
		<style>
			body {
				overflow-y: overlay;
				background-image: url("<%= assets %>/automatism/piecebg.png");
			}
			.wrap {
				padding: 30px;
			}
			.header {
				margin: 30px 0 0px 0;
				border-bottom: 4px double #999;
				display: inline-block;
				padding: 0 90px 0 8px;
			}
			.section {
				display: flex;
				flex-wrap: wrap;
			}
			.item {
				margin: 15px 10px;
			}
			.thumb {
				width: 120px;
				height: 120px;
				display: block;
				background-repeat: no-repeat;
				background-position: center;
				border: 1px solid #999;
			}
			.line .thumb, .text .thumb {
				background-image: url("<%= assets %>/automatism/thumbnails/text.png");
				border: none;
			}
			.audio .thumb, .soundcloud .thumb {
				background-image: url("<%= assets %>/automatism/thumbnails/text.png");
				border: none;
			}
			.missing .thumb {
				background-image: url("<%= assets %>/window/popup-attention.png");
				border: none;
			}
			.num {
				font-size: .8em;
				font-style: italic;
				display: inline-block;
				vertical-align: text-top;
				margin-top: 1px;
				color: #eee;
			}
			.icon {
				width: 16px;
				height: 16px;
				display: inline-block;
				float: right;
				margin-top: 2px;
			}
			.multi-image .icon {
				background-image: url("<%= assets %>/automatism/icon-multi-image.png");
			}
			.video .icon, .vimeo .icon, .youtube .icon {
				background-image: url("<%= assets %>/automatism/icon-video.png");
			}
			.single-image .icon {
				background-image: url("<%= assets %>/automatism/icon-single-image.png");
			}
			.text .icon, .line .icon {
				background-image: url("<%= assets %>/automatism/icon-text.png");
			}
			.audio .icon, .soundcloud .icon {
				background-image: url("<%= assets %>/automatism/icon-audio.png");
			}
			.missing .icon {
				background-image: url("<%= assets %>/automatism/icon-missing.png");
			}
		</style>
	</head>
